<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/listFlightsFragment">

    <fragment
        android:id="@+id/listFlightsFragment"
        android:name="ru.wb.treveltime.activity.fragment.ListFlightsFragment"
        android:label="@string/avia_tickets">
        <action
            android:id="@+id/action_listFlightsFragment_to_flightFragment"
            app:destination="@id/flightFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/flightFragment"
        android:name="ru.wb.treveltime.activity.fragment.FlightFragment"
        android:label="@string/details_for_ticket" />
</navigation>